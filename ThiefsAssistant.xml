<GuiXml>
  <Controls>
    <TopLevelControl name="ThiefsAssistantWindow" mouseEnabled="true" movable="true" clampedToScreen="true">
      <Dimensions x="1055" y="30"  />
      <Anchor point="CENTER" />
      <OnUpdate>
        ThiefsAssistantOnUpdate()
      </OnUpdate>
      <Controls>
        <!--
        <Texture name="$(parent)Bg" textureFile="esoui/art/loot/loot_windowbg.dds" layer="0">
          <Anchor point="CENTER" relativeTo="$(parent)" relativePoint="CENTER" />
          <Dimensions x="1200" y="256"  />
        </Texture>
        -->
        <Backdrop name="$(parent)Bg" inherits="ZO_DarkThinFrame" alpha="1">
          <AnchorFill />
        </Backdrop>
      </Controls>
    </TopLevelControl>
    <Label name="ThiefsAssistantLabelTemplate" text="default" font="ZoFontGameSmall" virtual="true" />
    <Control name="ThiefsAssistantGroupTemplate" virtual="true">
      <Controls>
        <Texture name="$(parent)Icon" textureFile="esoui/art/stats/justice_bounty_icon-white.dds">
          <Dimensions y="30" x="30" />
          <Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT" offsetY="-5" />
        </Texture>
        <Label name="$(parent)Title" text="title" font="ZoFontGameSmall" />
        <Label name="$(parent)Value" text="value" font="ZoFontGameSmall" />
      </Controls>
    </Control>
  </Controls>
</GuiXml>